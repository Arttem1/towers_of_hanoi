<UserControl x:Class="towers_of_hanoi.Ring"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="parent"
             xmlns:local="clr-namespace:towers_of_hanoi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding ElementName=parent}" MinHeight="36" Height="36" MinWidth="108" VerticalAlignment="Top">
        <Rectangle HorizontalAlignment="Center" 
                   Height="36" 
                   Stroke="Black" 
                   StrokeThickness="2" 
                   Width="{Binding Path=Width}" 
                   RadiusX="70" 
                   RadiusY="5" 
                   Fill="#FFFCAEC8" Visibility="Visible"/>
    </Grid>
</UserControl>
